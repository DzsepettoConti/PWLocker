<Window x:Class="PWLocker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PWLocker"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="196" Width="215">
    <Grid x:Name="SettingsWindowGrid" Margin="0,0,10,3">
        <Label Content="Themes" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.075,-0.288"/>
        <RadioButton Content="Red" HorizontalAlignment="Left" Margin="97,25,0,0" VerticalAlignment="Top" Name="themesRBred" Checked="cbRedChecked"/>
        <RadioButton Content="Blue" HorizontalAlignment="Left" Margin="97,50,0,0" VerticalAlignment="Top" Name="themesRBblue" Checked="cbBlueChecked"/>
        <RadioButton Content="Green" HorizontalAlignment="Left" Margin="97,75,0,0" VerticalAlignment="Top" Name="themesRgreen" Checked="cbGreenChecked"/>
        <RadioButton Content="Purple" HorizontalAlignment="Left" Margin="97,100,0,0" VerticalAlignment="Top" Name="themesRBpurple" Checked="cbPurpleChecked"/>
        <Button Content="Mentés" HorizontalAlignment="Left" Margin="117,120,0,0" VerticalAlignment="Top" Click="btnSaveClick"/>

    </Grid>
</Window>
